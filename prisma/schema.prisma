generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  cpf      String @unique
  email    String @unique
  password String
  userType String
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  products  Json
  createdAt DateTime @default(now())
}
